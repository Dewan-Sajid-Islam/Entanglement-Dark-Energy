# Notebook 1: Background Evolution

import numpy as np
import matplotlib.pyplot as plt
import sys
import os

# Add parent directory to path
sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from scripts.background_evolution import EDECosmology
from scripts.utils import setup_plot_style

# Setup plotting
setup_plot_style('default')

# Initialize cosmologies
ede = EDECosmology(model_name='EDE')
lcdm = EDECosmology(model_name='LCDM')

# Solve background
print("Solving EDE background...")
ede_bg = ede.solve_background(z_max=5.0)

print("Solving ΛCDM background...")
lcdm_bg = lcdm.solve_background(z_max=5.0)

# Plot Hubble parameter
fig, (ax1, ax2) = plt.subplots(1, 2, figsize=(12, 5))

# H(z)
ax1.plot(ede_bg['z'], ede_bg['H'], 'r-', label='EDE', linewidth=2)
ax1.plot(lcdm_bg['z'], lcdm_bg['H'], 'b--', label='ΛCDM', linewidth=2)
ax1.set_xlabel('Redshift z')
ax1.set_ylabel('H(z) [km/s/Mpc]')
ax1.set_xlim(0, 2)
ax1.legend()
ax1.grid(True, alpha=0.3)

# w(z)
mask = ede_bg['z'] <= 1.0
ax2.plot(ede_bg['z'][mask], ede_bg['w_ent'][mask], 'r-', label='EDE w(z)', linewidth=2)
ax2.axhline(-1, color='b', linestyle='--', label='ΛCDM (w=-1)')
ax2.set_xlabel('Redshift z')
ax2.set_ylabel('w(z)')
ax2.set_xlim(0, 1)
ax2.set_ylim(-1.05, -0.85)
ax2.legend()
ax2.grid(True, alpha=0.3)

plt.tight_layout()
plt.show()

# Print key values
print(f"\nKey parameters at z=0:")
print(f"EDE H0 = {ede.H0:.1f} km/s/Mpc")
print(f"ΛCDM H0 = {lcdm.H0:.1f} km/s/Mpc")
print(f"EDE w(z=0) = {ede_bg['w_ent'][0]:.3f}")
print(f"EDE Ω_m(z=0) = {ede.Omega_m0:.3f}")
print(f"EDE Ω_ent(z=0) = {ede_bg['Omega_ent'][0]:.3f}")
