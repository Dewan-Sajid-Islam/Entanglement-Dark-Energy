import numpy as np
import matplotlib.pyplot as plt
import sys
import os

# Add parent directory to path
sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from scripts.background_evolution import EDECosmology
from scripts.cmb_spectra import CMBSpectra
from scripts.utils import setup_plot_style

# Setup plotting
setup_plot_style('default')
plt.rcParams['figure.figsize'] = [12, 8]

print("="*60)
print("CMB POWER SPECTRA ANALYSIS")
print("="*60)

# Initialize cosmologies
print("\n1. Initializing cosmologies...")
ede = EDECosmology(model_name='EDE')
lcdm = EDECosmology(model_name='LCDM')

# Create CMB calculators
print("2. Creating CMB spectra calculators...")
ede_params = {'A_s': 2.1e-9, 'n_s': 0.965, 'tau': 0.054}
lcdm_params = {'A_s': 2.1e-9, 'n_s': 0.9649, 'tau': 0.0544}

ede_cmb = CMBSpectra(ede, ede_params)
lcdm_cmb = CMBSpectra(lcdm, lcdm_params)

# Create ℓ array
ell = np.arange(2, 2501)

print("3. Calculating CMB spectra...")
D_ell_ede = ede_cmb.temperature_spectrum(ell)
D_ell_lcdm = lcdm_cmb.temperature_spectrum(ell)

D_ell_EE_ede = ede_cmb.polarization_spectrum(ell, 'EE')
D_ell_EE_lcdm = lcdm_cmb.polarization_spectrum(ell, 'EE')

D_ell_TE_ede = ede_cmb.polarization_spectrum(ell, 'TE')
D_ell_TE_lcdm = lcdm_cmb.polarization_spectrum(ell, 'TE')

print("4. Calculating lensing spectrum...")
C_ell_phi_ede = ede_cmb.lensing_potential_spectrum(ell)
C_ell_phi_lcdm = lcdm_cmb.lensing_potential_spectrum(ell)

# Create figure with subplots
fig, axes = plt.subplots(2, 2, figsize=(14, 10))

# Panel 1: Temperature spectrum (full range)
ax = axes[0, 0]
ax.semilogx(ell, D_ell_ede, 'r-', linewidth=1.5, label='EDE', alpha=0.8)
ax.semilogx(ell, D_ell_lcdm, 'b--', linewidth=1.5, label=r'$\Lambda$CDM', alpha=0.8)

# Mark acoustic peaks
peak_positions = [220, 540, 850, 1120]
for pos in peak_positions:
    ax.axvline(pos, color='gray', linestyle=':', alpha=0.3, linewidth=0.5)

ax.set_xlabel(r'Multipole $\ell$', fontsize=12)
ax.set_ylabel(r'$D_\ell^{TT}$ [$\mu$K$^2$]', fontsize=12)
ax.set_xlim(2, 2500)
ax.set_ylim(0, 6000)
ax.legend(fontsize=11)
ax.grid(True, alpha=0.3, which='both')
ax.set_title('CMB Temperature Power Spectrum', fontsize=14)

# Panel 2: Low-ℓ region and ratio
ax = axes[0, 1]

# Create two y-axes
ax1 = ax
ax2 = ax1.twinx()

# Plot ratio on right axis
ratio = D_ell_ede / D_ell_lcdm
ax2.semilogx(ell, ratio, 'k-', linewidth=1, alpha=0.7, label='Ratio')
ax2.axhline(1.0, color='gray', linestyle=':', alpha=0.5)
ax2.set_ylabel('EDE/ΛCDM Ratio', fontsize=11)
ax2.set_ylim(0.8, 1.2)

# Plot spectra on left axis
mask = ell <= 100
ax1.semilogx(ell[mask], D_ell_ede[mask], 'r-', linewidth=2, label='EDE', alpha=0.8)
ax1.semilogx(ell[mask], D_ell_lcdm[mask], 'b--', linewidth=2, label=r'$\Lambda$CDM', alpha=0.8)

# Highlight ISW region
ax1.axvspan(15, 35, alpha=0.2, color='orange', label='ISW region')

ax1.set_xlabel(r'Multipole $\ell$', fontsize=12)
ax1.set_ylabel(r'$D_\ell^{TT}$ [$\mu$K$^2$]', fontsize=12)
ax1.set_xlim(2, 100)
ax1.set_ylim(500, 2500)
ax1.legend(fontsize=10, loc='upper left')
ax1.grid(True, alpha=0.3)
ax2.legend(loc='upper right', fontsize=10)
ax1.set_title('Low-$\ell$ Region (ISW Effect)', fontsize=14)

# Panel 3: Polarization spectra
ax = axes[1, 0]

# Plot EE spectra
ax.semilogx(ell, D_ell_EE_ede, 'r-', linewidth=1.5, label='EDE EE', alpha=0.8)
ax.semilogx(ell, D_ell_EE_lcdm, 'b--', linewidth=1.5, label=r'$\Lambda$CDM EE', alpha=0.8)

# Plot TE spectra (scaled)
ax.semilogx(ell, D_ell_TE_ede * 5, 'g-', linewidth=1.5, label='EDE TE ×5', alpha=0.6)
ax.semilogx(ell, D_ell_TE_lcdm * 5, 'm--', linewidth=1.5, label=r'$\Lambda$CDM TE ×5', alpha=0.6)

ax.set_xlabel(r'Multipole $\ell$', fontsize=12)
ax.set_ylabel(r'$D_\ell$ [$\mu$K$^2$]', fontsize=12)
ax.set_xlim(2, 2500)
ax.set_ylim(0, 60)
ax.legend(fontsize=10)
ax.grid(True, alpha=0.3, which='both')
ax.set_title('Polarization Spectra (EE and TE)', fontsize=14)

# Panel 4: TE correlation at low ℓ
ax = axes[1, 1]

mask = ell <= 100
ax.plot(ell[mask], D_ell_TE_ede[mask], 'r-', linewidth=2, label='EDE TE')
ax.plot(ell[mask], D_ell_TE_lcdm[mask], 'b--', linewidth=2, label=r'$\Lambda$CDM TE', alpha=0.7)

# Highlight predicted EDE signature
ax.axvspan(20, 30, alpha=0.2, color='orange', label='Predicted EDE signature')

# Add zero line
ax.axhline(0, color='gray', linestyle='-', alpha=0.3)

ax.set_xlabel(r'Multipole $\ell$', fontsize=12)
ax.set_ylabel(r'$D_\ell^{TE}$ [$\mu$K$^2$]', fontsize=12)
ax.set_xlim(0, 100)
ax.set_ylim(-30, 30)
ax.legend(fontsize=10, loc='upper right')
ax.grid(True, alpha=0.3)
ax.set_title('Temperature-Polarization Correlation', fontsize=14)

plt.tight_layout()
plt.show()

# Print key statistics
print("\n" + "="*60)
print("KEY STATISTICS")
print("="*60)

# Calculate acoustic scale
print("\nAcoustic scale characteristics:")
for model_name, cmb_obj in [('EDE', ede_cmb), ('ΛCDM', lcdm_cmb)]:
    theta, ell_A = cmb_obj.compute_angular_scale('sound_horizon')
    print(f"  {model_name}:")
    print(f"    θ* = {theta:.6f}°")
    print(f"    ℓ_A ≈ {ell_A:.0f}")

# Calculate low-ℓ power
print("\nLow-ℓ power (ℓ < 30):")
mask_low = ell < 30
power_ede_low = np.mean(D_ell_ede[mask_low])
power_lcdm_low = np.mean(D_ell_lcdm[mask_low])
suppression = (1 - power_ede_low/power_lcdm_low) * 100

print(f"  Mean D_ℓ (ℓ<30):")
print(f"    EDE: {power_ede_low:.1f} μK²")
print(f"    ΛCDM: {power_lcdm_low:.1f} μK²")
print(f"    Suppression: {suppression:.1f}%")

# Calculate peak positions
print("\nFirst acoustic peak position:")
# Find peak around ℓ=200-300
mask_peak = (ell > 200) & (ell < 300)
peak_pos_ede = ell[mask_peak][np.argmax(D_ell_ede[mask_peak])]
peak_pos_lcdm = ell[mask_peak][np.argmax(D_ell_lcdm[mask_peak])]

print(f"  EDE: ℓ = {peak_pos_ede}")
print(f"  ΛCDM: ℓ = {peak_pos_lcdm}")
print(f"  Shift: Δℓ = {peak_pos_ede - peak_pos_lcdm:.1f}")

# Save figure
print("\nSaving figure...")
fig.savefig('figures/notebook_cmb_spectra.png', dpi=150, bbox_inches='tight')
print("✓ Figure saved as figures/notebook_cmb_spectra.png")

print("\n" + "="*60)
print("ANALYSIS COMPLETE")
print("="*60)
print("\nQuote of the day: 'We are limitless in a limited space' - Dewan Sajid Islam")
