import numpy as np
import matplotlib.pyplot as plt
import sys
import os

# Add parent directory to path
sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from scripts.background_evolution import EDECosmology
from scripts.growth_functions import GrowthCalculator
from scripts.utils import setup_plot_style

# Setup plotting
setup_plot_style('default')
plt.rcParams['figure.figsize'] = [12, 8]

print("="*60)
print("GROWTH FUNCTIONS ANALYSIS")
print("="*60)

# Initialize cosmologies
print("\n1. Initializing cosmologies...")
ede = EDECosmology(model_name='EDE')
lcdm = EDECosmology(model_name='LCDM')

# Create growth calculators
print("2. Creating growth calculators...")
ede_growth = GrowthCalculator(ede)
lcdm_growth = GrowthCalculator(lcdm)

# Solve growth equations
print("3. Solving growth equations...")
ede_data = ede_growth.solve_growth_equation(z_max=5.0)
lcdm_data = lcdm_growth.solve_growth_equation(z_max=5.0)

print("4. Computing σ8...")
ede_sigma8 = ede_growth.compute_sigma8(sigma8_0=0.829)
lcdm_sigma8 = lcdm_growth.compute_sigma8(sigma8_0=0.811)

# Create figure with subplots
fig, axes = plt.subplots(2, 2, figsize=(14, 10))

# Panel 1: Growth factor D(z)
ax = axes[0, 0]
ax.plot(ede_data['z'], ede_data['D'], 'r-', linewidth=2, label='EDE')
ax.plot(lcdm_data['z'], lcdm_data['D'], 'b--', linewidth=2, label=r'$\Lambda$CDM')
ax.set_xlabel('Redshift $z$', fontsize=12)
ax.set_ylabel('Growth Factor $D(z)$', fontsize=12)
ax.set_xlim(0, 5)
ax.set_ylim(0, 1.1)
ax.legend(fontsize=11)
ax.grid(True, alpha=0.3)
ax.set_title('Linear Growth Factor', fontsize=14)

# Panel 2: Growth rate f(z)
ax = axes[0, 1]
ax.plot(ede_data['z'], ede_data['f'], 'r-', linewidth=2, label='EDE')
ax.plot(lcdm_data['z'], lcdm_data['f'], 'b--', linewidth=2, label=r'$\Lambda$CDM')
ax.set_xlabel('Redshift $z$', fontsize=12)
ax.set_ylabel('Growth Rate $f(z)$', fontsize=12)
ax.set_xlim(0, 5)
ax.set_ylim(0.4, 1.1)
ax.legend(fontsize=11)
ax.grid(True, alpha=0.3)
ax.set_title('Growth Rate $f(z) = d\ln D/d\ln a$', fontsize=14)

# Panel 3: fσ8(z)
ax = axes[1, 0]
z = ede_data['z']
fsigma8_ede = ede_growth.get_fsigma8(z, sigma8_0=0.829)
fsigma8_lcdm = lcdm_growth.get_fsigma8(z, sigma8_0=0.811)

ax.plot(z, fsigma8_ede, 'r-', linewidth=2, label='EDE')
ax.plot(z, fsigma8_lcdm, 'b--', linewidth=2, label=r'$\Lambda$CDM')

# Add mock observational data
z_data = np.array([0.02, 0.10, 0.15, 0.25, 0.37, 0.44, 0.60, 0.73, 0.86, 1.00])
fsigma8_data = np.array([0.398, 0.370, 0.490, 0.351, 0.460, 0.413, 0.390, 0.437, 0.407, 0.482])
fsigma8_err = np.array([0.065, 0.130, 0.145, 0.058, 0.038, 0.080, 0.063, 0.066, 0.055, 0.116])

ax.errorbar(z_data, fsigma8_data, yerr=fsigma8_err, fmt='o', 
           color='darkgreen', markersize=5, capsize=3, capthick=1.5,
           alpha=0.7, label='RSD measurements')

ax.set_xlabel('Redshift $z$', fontsize=12)
ax.set_ylabel(r'$f\sigma_8(z)$', fontsize=12)
ax.set_xlim(0, 2)
ax.set_ylim(0.3, 0.6)
ax.legend(fontsize=11, loc='lower left')
ax.grid(True, alpha=0.3)
ax.set_title('Redshift-Space Distortions', fontsize=14)

# Panel 4: Ratio of growth factors
ax = axes[1, 1]
ratio_D = ede_data['D'] / lcdm_data['D']
ratio_f = ede_data['f'] / lcdm_data['f']

ax.plot(z, ratio_D, 'r-', linewidth=2, label=r'$D_{\rm EDE}/D_{\Lambda\rm CDM}$')
ax.plot(z, ratio_f, 'b--', linewidth=2, label=r'$f_{\rm EDE}/f_{\Lambda\rm CDM}$')
ax.axhline(1.0, color='gray', linestyle=':', alpha=0.5)

ax.set_xlabel('Redshift $z$', fontsize=12)
ax.set_ylabel('Ratio', fontsize=12)
ax.set_xlim(0, 5)
ax.set_ylim(0.95, 1.05)
ax.legend(fontsize=11)
ax.grid(True, alpha=0.3)
ax.set_title('Growth Function Ratios', fontsize=14)

plt.tight_layout()
plt.show()

# Print key statistics
print("\n" + "="*60)
print("KEY STATISTICS")
print("="*60)

print(f"\nGrowth factor at z=0:")
print(f"  EDE: D(0) = {ede_data['D'][-1]:.4f}")
print(f"  ΛCDM: D(0) = {lcdm_data['D'][-1]:.4f}")

print(f"\nGrowth rate at z=0:")
print(f"  EDE: f(0) = {ede_data['f'][-1]:.4f}")
print(f"  ΛCDM: f(0) = {lcdm_data['f'][-1]:.4f}")

print(f"\nfσ8 at z=0:")
print(f"  EDE: fσ8(0) = {fsigma8_ede[-1]:.4f}")
print(f"  ΛCDM: fσ8(0) = {fsigma8_lcdm[-1]:.4f}")

# Calculate enhancement
enhancement = (ede_data['D'][-1] / lcdm_data['D'][-1] - 1) * 100
print(f"\nEDE enhances growth by: {enhancement:.2f}% at z=0")

# Save figure
print("\nSaving figure...")
fig.savefig('figures/notebook_growth_functions.png', dpi=150, bbox_inches='tight')
print("✓ Figure saved as figures/notebook_growth_functions.png")

print("\n" + "="*60)
print("ANALYSIS COMPLETE")
print("="*60)
