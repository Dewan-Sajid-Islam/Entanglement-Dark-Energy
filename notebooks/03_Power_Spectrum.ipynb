import numpy as np
import matplotlib.pyplot as plt
import sys
import os

# Add parent directory to path
sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from scripts.background_evolution import EDECosmology
from scripts.power_spectrum import PowerSpectrum
from scripts.utils import setup_plot_style

# Setup plotting
setup_plot_style('default')
plt.rcParams['figure.figsize'] = [12, 8]

print("="*60)
print("MATTER POWER SPECTRUM ANALYSIS")
print("="*60)

# Initialize cosmologies
print("\n1. Initializing cosmologies...")
ede = EDECosmology(model_name='EDE')
lcdm = EDECosmology(model_name='LCDM')

# Create power spectrum calculators
print("2. Creating power spectrum calculators...")
ede_ps = PowerSpectrum(ede, A_s=2.1e-9, n_s=0.965)
lcdm_ps = PowerSpectrum(lcdm, A_s=2.1e-9, n_s=0.9649)

# Create k array (log-spaced from very large to small scales)
k = np.logspace(-4, 1, 500)  # h/Mpc

print("3. Calculating power spectra...")
Pk_ede = ede_ps.linear_power_spectrum(k, z=0.0)
Pk_lcdm = lcdm_ps.linear_power_spectrum(k, z=0.0)

print("4. Calculating σ8...")
sigma8_ede = ede_ps.sigma8(z=0.0)
sigma8_lcdm = lcdm_ps.sigma8(z=0.0)

# Create figure with subplots
fig, axes = plt.subplots(2, 2, figsize=(14, 10))

# Panel 1: Linear power spectra
ax = axes[0, 0]
ax.loglog(k, Pk_ede, 'r-', linewidth=2, label='EDE', alpha=0.8)
ax.loglog(k, Pk_lcdm, 'b--', linewidth=2, label=r'$\Lambda$CDM', alpha=0.8)

# Mark BAO scale
k_bao = 0.1  # h/Mpc
ax.axvline(k_bao, color='green', linestyle=':', alpha=0.7, label='BAO scale')

ax.set_xlabel(r'$k$ [$h$ Mpc$^{-1}$]', fontsize=12)
ax.set_ylabel(r'$P(k)$ [$(h^{-1}$ Mpc)$^3$]', fontsize=12)
ax.set_xlim(1e-4, 10)
ax.set_ylim(1e-4, 1e5)
ax.legend(fontsize=11)
ax.grid(True, alpha=0.3, which='both')
ax.set_title('Linear Matter Power Spectrum at $z=0$', fontsize=14)

# Panel 2: Ratio and scale-dependent effects
ax = axes[0, 1]
ratio = Pk_ede / Pk_lcdm
ax.semilogx(k, ratio, 'k-', linewidth=2, label='EDE/$\Lambda$CDM ratio')

# Add entanglement correction prediction
k_theory = np.logspace(-4, -1, 100)
ratio_theory = 1.0 - 1e-5 * (0.05/k_theory)**2
ratio_theory = np.where(k_theory < 0.01, ratio_theory, 1.0)
ax.semilogx(k_theory, ratio_theory, 'g:', linewidth=1.5, 
           label=r'$1 - \beta(k_*/k)^2$ prediction', alpha=0.8)

ax.axhline(1.0, color='gray', linestyle='--', alpha=0.5)
ax.axvline(0.01, color='red', linestyle=':', alpha=0.7, 
          label=r'$k = 0.01\ h$ Mpc$^{-1}$')

# Highlight regions
ax.axvspan(1e-4, 0.01, alpha=0.1, color='red', label='EDE suppression')
ax.axvspan(0.01, 0.1, alpha=0.1, color='yellow', label='Transition')
ax.axvspan(0.1, 10, alpha=0.1, color='green', label='Standard regime')

ax.set_xlabel(r'$k$ [$h$ Mpc$^{-1}$]', fontsize=12)
ax.set_ylabel(r'$P_{\rm EDE}(k)/P_{\Lambda\rm CDM}(k)$', fontsize=12)
ax.set_xlim(1e-4, 10)
ax.set_ylim(0.9, 1.05)
ax.legend(fontsize=9, loc='lower right')
ax.grid(True, alpha=0.3, which='both')
ax.set_title('Scale-Dependent Ratio', fontsize=14)

# Panel 3: Power spectrum at different redshifts
ax = axes[1, 0]
z_values = [0.0, 0.5, 1.0, 2.0]
colors = ['red', 'orange', 'purple', 'blue']

for z, color in zip(z_values, colors):
    Pk_z = ede_ps.linear_power_spectrum(k, z)
    ax.loglog(k, Pk_z, color=color, linewidth=2, alpha=0.7, label=f'z={z}')

ax.set_xlabel(r'$k$ [$h$ Mpc$^{-1}$]', fontsize=12)
ax.set_ylabel(r'$P(k,z)$ [$(h^{-1}$ Mpc)$^3$]', fontsize=12)
ax.set_xlim(1e-3, 10)
ax.set_ylim(1e-2, 1e5)
ax.legend(fontsize=11)
ax.grid(True, alpha=0.3, which='both')
ax.set_title('Power Spectrum Evolution with Redshift', fontsize=14)

# Panel 4: σ_R for different scales
ax = axes[1, 1]
R_values = np.logspace(0, 2, 20)  # 1 to 100 Mpc/h

sigma_R_ede = np.array([ede_ps.sigma_R(R, z=0.0) for R in R_values])
sigma_R_lcdm = np.array([lcdm_ps.sigma_R(R, z=0.0) for R in R_values])

ax.loglog(R_values, sigma_R_ede, 'r-', linewidth=2, label='EDE')
ax.loglog(R_values, sigma_R_lcdm, 'b--', linewidth=2, label=r'$\Lambda$CDM')

# Mark σ8 point
ax.axvline(8.0, color='gray', linestyle=':', alpha=0.5, label=r'$R=8$ Mpc/$h$')
ax.scatter([8.0], [sigma8_ede], color='red', s=50, zorder=5)
ax.scatter([8.0], [sigma8_lcdm], color='blue', s=50, zorder=5)

ax.set_xlabel(r'Scale $R$ [Mpc/$h$]', fontsize=12)
ax.set_ylabel(r'$\sigma_R$', fontsize=12)
ax.set_xlim(1, 100)
ax.set_ylim(0.1, 1)
ax.legend(fontsize=11)
ax.grid(True, alpha=0.3, which='both')
ax.set_title('RMS Fluctuations vs Scale', fontsize=14)

plt.tight_layout()
plt.show()

# Print key statistics
print("\n" + "="*60)
print("KEY STATISTICS")
print("="*60)

print(f"\nσ8 values:")
print(f"  EDE: σ8 = {sigma8_ede:.4f}")
print(f"  ΛCDM: σ8 = {sigma8_lcdm:.4f}")

print(f"\nPower at different scales (P(k) in (Mpc/h)³):")
scales = [0.001, 0.01, 0.1, 1.0]
for scale in scales:
    idx = np.argmin(np.abs(k - scale))
    print(f"  k={scale:.3f} h/Mpc:")
    print(f"    EDE: P(k) = {Pk_ede[idx]:.2e}")
    print(f"    ΛCDM: P(k) = {Pk_lcdm[idx]:.2e}")
    print(f"    Ratio: {Pk_ede[idx]/Pk_lcdm[idx]:.4f}")

# Calculate suppression at large scales
k_suppression = 0.001
idx_supp = np.argmin(np.abs(k - k_suppression))
suppression = (1 - Pk_ede[idx_supp]/Pk_lcdm[idx_supp]) * 100
print(f"\nSuppression at k={k_suppression} h/Mpc: {suppression:.2f}%")

# Save figure
print("\nSaving figure...")
fig.savefig('figures/notebook_power_spectrum.png', dpi=150, bbox_inches='tight')
print("✓ Figure saved as figures/notebook_power_spectrum.png")

print("\n" + "="*60)
print("ANALYSIS COMPLETE")
print("="*60)
